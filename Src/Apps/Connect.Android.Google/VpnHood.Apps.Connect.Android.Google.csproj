<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Description>VpnHood Android Client Connect App with Ads and memebership</Description>
		<TargetFramework>net9.0-android35.0</TargetFramework>
		<RootNamespace>VpnHood.Apps.Client.Droid.Google</RootNamespace>
		<OutputType>Exe</OutputType>
		<ApplicationId>com.vpnhood.connect.android</ApplicationId>
		<ApplicationVersion>610</ApplicationVersion>
		<ApplicationDisplayVersion>5.0.610</ApplicationDisplayVersion>
		<SupportedOSPlatformVersion>24.0</SupportedOSPlatformVersion>
		<DebugSymbols>True</DebugSymbols>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<PublishTrimmed>True</PublishTrimmed>
		<RunAOTCompilation>True</RunAOTCompilation>
		<RuntimeIdentifiers>android-arm64;android-x64;android-arm</RuntimeIdentifiers>
	</PropertyGroup>

	<PropertyGroup>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>symbols.nupkg</SymbolPackageFormat>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<PropertyGroup>
		<PackageLicenseExpression>LGPL-2.1-only</PackageLicenseExpression>
		<Company>OmegaHood LLC</Company>
		<Copyright>Â© OmegaHood LLC. All rights reserved.</Copyright>
		<PackageIcon>VpnHood.png</PackageIcon>
		<PackageProjectUrl>https://github.com/vpnhood/vpnhood</PackageProjectUrl>
		<RepositoryUrl>https://github.com/vpnhood/vpnhood</RepositoryUrl>
		<Version>5.0.610</Version>
		<FileVersion>$([System.DateTime]::Now.ToString("yyyy.M.d.HHmm"))</FileVersion>
		<BaseIntermediateOutputPath />
	</PropertyGroup>

	<ItemGroup Condition="Exists('$(SolutionDir)\..\.user\VpnHoodConnect\appsettings.json')">
		<AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
			<_Parameter1>AppSettings</_Parameter1>
			<_Parameter2>$([System.IO.File]::ReadAllText("$(SolutionDir)\..\.user\VpnHoodConnect\appsettings.json"))</_Parameter2>
		</AssemblyAttribute>
	</ItemGroup>

	<ItemGroup Condition="Exists('$(SolutionDir)\..\.user\VpnHoodConnect\appsettings.$(Configuration).json')">
		<AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
			<_Parameter1>AppSettings_Environment</_Parameter1>
			<_Parameter2>$([System.IO.File]::ReadAllText("$(SolutionDir)\..\.user\VpnHoodConnect\appsettings.$(Configuration).json"))</_Parameter2>
		</AssemblyAttribute>
	</ItemGroup>

	<ItemGroup>
		<AndroidResource Update="Resources\xml\locales_config.xml">
			<SubType>Designer</SubType>
			<Generator>MSBuild:UpdateGeneratedFiles</Generator>
		</AndroidResource>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\AppLibs\VpnHood.AppLibs.Android.Ads.AdMob\VpnHood.AppLibs.Android.Ads.AdMob.csproj" />
		<ProjectReference Include="..\..\AppLibs\VpnHood.AppLibs.Android.GooglePlay.Core\VpnHood.AppLibs.Android.GooglePlay.Core.csproj" />
		<ProjectReference Include="..\..\AppLibs\VpnHood.AppLibs.Android.GooglePlay\VpnHood.AppLibs.Android.GooglePlay.csproj" />
		<ProjectReference Include="..\..\AppLibs\VpnHood.AppLibs.Android.Common\VpnHood.AppLibs.Android.Common.csproj" />
		<ProjectReference Include="..\..\AppLibs\VpnHood.AppLibs.Resources\VpnHood.AppLibs.Resources.csproj" />
		<ProjectReference Include="..\..\AppLibs\VpnHood.AppLibs.Store\VpnHood.AppLibs.Store.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="VpnHood.Core.Client.App.Android.Ads.Chartboost" Version="4.5.557" />
		<PackageReference Include="VpnHood.Core.Client.App.Android.Ads.InMobi" Version="4.5.566" />
		<PackageReference Include="Xamarin.Firebase.Analytics" Version="122.1.2.1" />
		<PackageReference Include="Xamarin.Firebase.Crashlytics" Version="119.2.1.1" />
	</ItemGroup>

	<ItemGroup>
		<GoogleServicesJson Include="Properties\google-services.json" />
	</ItemGroup>

</Project>